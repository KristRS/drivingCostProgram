// tripCosts.cpp  (Branch: add-drivingcost) - Added DrivingCost function and used it
#include <iostream>
#include <iomanip>
using namespace std;

// Returns the cost to drive a certain number of miles
float DrivingCost(float drivenMiles, float milesPerGallon, float dollarsPerGallon) {
    return (drivenMiles / milesPerGallon) * dollarsPerGallon;
}

int main() {
    float milesPerGallon;
    float dollarsPerGallon;

    cin >> milesPerGallon;
    cin >> dollarsPerGallon;

    cout << fixed << setprecision(2)
         << DrivingCost(10.0f, milesPerGallon, dollarsPerGallon) << " "
         << DrivingCost(50.0f, milesPerGallon, dollarsPerGallon) << " "
         << DrivingCost(400.0f, milesPerGallon, dollarsPerGallon) << endl;

    return 0;
}
